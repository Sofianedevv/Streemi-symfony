{% extends 'base_auth.html.twig' %}

{% block title %}Streemi - Inscription{% endblock %}

{% block auth_content %}

    {# Inclusion de l'en-tête d'authentification #}
    {% include 'parts/header/header_auth.html.twig' %}

    <section class="h-full relative">
        {# Section d'arrière-plan avec image et overlay noir semi-transparent #}
        <div style="background-image: url('https://blog.compose.fr/wp-content/uploads/2024/05/Marathon-Cinema.webp')"
             class="bg-cover bg-no-repeat h-full relative before:bg-black/40 before:absolute before:inset-0">
            <div class="p-8 lg:w-1/2 mx-auto h-full flex items-center justify-center">
                <div class="bg-white rounded-lg p-8 w-full shadow-lg relative">
                    
                    <h1 class="text-center text-xl font-bold text-gray-800">S'inscrire avec</h1>

                    {# Boutons d'inscription via des plateformes externes #}
                    <div class="flex items-center justify-center space-x-4 mt-10">
                        {# Bouton Netflix #}
                        <button class="flex items-center justify-center w-full sm:w-auto px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-800 font-bold rounded-lg shadow transition transform hover:scale-105">
                            <svg class="h-7 w-7 mr-3 fill-red-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <title>netflix</title>
                                <path d="M6.5,2H10.5L13.44,10.83L13.5,2H17.5V22C16.25,21.78 14.87,21.64 13.41,21.58L10.5,13L10.43,21.59C9.03,21.65 7.7,21.79 6.5,22V2Z" />
                            </svg>
                            Netflix
                        </button>

                        {# Bouton Twitter #}
                        <button class="flex items-center justify-center w-full sm:w-auto px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-800 font-bold rounded-lg shadow transition transform hover:scale-105">
                            <svg class="h-7 w-7 mr-3 fill-blue-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <title>twitter</title>
                                <path d="M22.46 6c-.77.35-1.6.59-2.46.69a4.3 4.3 0 0 0 1.88-2.38 8.6 8.6 0 0 1-2.72 1.04 4.3 4.3 0 0 0-7.32 3.91A12.2 12.2 0 0 1 2 4.9a4.3 4.3 0 0 0 1.33 5.73 4.28 4.28 0 0 1-1.95-.54v.05a4.3 4.3 0 0 0 3.45 4.22 4.3 4.3 0 0 1-1.94.07 4.3 4.3 0 0 0 4.02 3 8.6 8.6 0 0 1-6.33 1.77A12.2 12.2 0 0 0 8 21a12.2 12.2 0 0 0 12.23-12.23c0-.19 0-.38-.02-.57a8.8 8.8 0 0 0 2.25-2.3" />
                            </svg>
                            Twitter
                        </button>
                    </div>

                    {# Séparateur entre les boutons externes et le formulaire #}
                    <div class="my-8 flex items-center justify-center">
                        <span class="border-b-2 border-gray-300 w-1/4"></span>
                        <span class="mx-4 text-gray-500 font-medium">OU</span>
                        <span class="border-b-2 border-gray-300 w-1/4"></span>
                    </div>

                    {# Formulaire Symfony d'inscription #}
                    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                        
                        <div>
                            {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'block text-gray-600'}}) }}
                            {{ form_widget(form.username, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring focus:ring-indigo-200 focus:outline-none', 'placeholder': "Votre nom d'utilisateur"}}) }}
                        </div>
                        
                        <div>
                            {{ form_label(form.email, "Adresse Email", {'label_attr': {'class': 'block text-gray-600'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring focus:ring-indigo-200 focus:outline-none', 'placeholder': "Votre email"}}) }}
                        </div>
                        
                        <div>
                            {{ form_label(form.plainPassword, "Mot de passe", {'label_attr': {'class': 'block text-gray-600'}}) }}
                            {{ form_widget(form.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring focus:ring-indigo-200 focus:outline-none', 'placeholder': "Votre mot de passe"}}) }}
                        </div>
                        
                        <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105">
                            S'inscrire
                        </button>
                    
                    {{ form_end(form) }}

                    {# Lien vers la page de connexion #}
                    <p class="text-center mt-6 text-gray-600">
                        Vous avez déjà un compte ?
                        <a href="{{ path('app_login') }}" class="text-indigo-600 hover:underline">Se connecter</a>
                    </p>

                </div>
            </div>
        </div>
    </section>

{% endblock %}
