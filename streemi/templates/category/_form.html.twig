{{ form_start(form, {'attr': {'class': 'w-full max-w-lg'}}) }}
    <div class="my-4">
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
    </div>

    <div class="mb-6">
        <div class="flex items-center">
            <div class="w-1/3">
                <label for="{{ form.name.vars.id }}" class="block text-gray-700 font-bold mb-2">
                    {{ form_label(form.name) }}
                </label>
            </div>
            <div class="w-2/3">
                {{ form_widget(form.name, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-300 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}
                {{ form_errors(form.name) }}
            </div>
        </div>
    </div>

    <div class="mb-6">
        <div class="flex items-center">
            <div class="w-1/3">
                <label for="{{ form.label.vars.id }}" class="block text-gray-700 font-bold mb-2">
                    {{ form_label(form.label) }}
                </label>
            </div>
            <div class="w-2/3">
                {{ form_widget(form.label, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-300 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}
                {{ form_errors(form.label) }}
            </div>
        </div>
    </div>



    <div class="flex justify-end mt-4">
        <button type="submit" class="bg-purple-500 hover:bg-purple-400 focus:outline-none focus:shadow-outline text-white font-bold py-2 px-4 rounded">
            {{ button_label|default('Ajouter') }}
        </button>
    </div>
{{ form_end(form) }}
