{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block content %}
    <h1 class="text-2xl font-semibold mb-6">Toutes les cat√©gories</h1>

    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full table-auto">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-500 uppercase">Id</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-500 uppercase">Name</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-500 uppercase">Label</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-700">
                {% for category in categories %}
                    <tr class="border-b hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm">{{ category.id }}</td>
                        <td class="px-6 py-4 text-sm">{{ category.name }}</td>
                        <td class="px-6 py-4 text-sm">{{ category.label }}</td>
                        <td class="px-6 py-4 text-sm">
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="text-yellow-600 hover:text-yellow-800">Edit</a>
                            <span class="mx-2">|</span>
                            <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="text-blue-600 hover:text-red-800">{{ include('category/_delete_form.html.twig') }}</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_category_new') }}" class="mt-4 inline-block bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">Create New</a>
{% endblock %}
